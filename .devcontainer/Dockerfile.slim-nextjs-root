FROM node:22-bookworm-slim

ARG DEBIAN_FRONTEND=noninteractive
ARG PNPM_VERSION=9.1.0

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        git \
        sudo \
        openssh-client \
        locales \
        python3 \
        python3-pip \
        build-essential \
        ca-certificates \
        curl \
        libasound2 \
        libatk1.0-0 \
        libatk-bridge2.0-0 \
        libatspi2.0-0 \
        libcairo2 \
        libcups2 \
        libdbus-1-3 \
        libdrm2 \
        libgbm1 \
        libgtk-3-0 \
        libnss3 \
        libpango-1.0-0 \
        libx11-xcb1 \
        libxcomposite1 \
        libxdamage1 \
        libxext6 \
        libxfixes3 \
        libxkbcommon0 \
        libxrandr2 \
        unzip \
        wget \
    && rm -rf /var/lib/apt/lists/*

RUN locale-gen en_US.UTF-8
ENV LANG=en_US.UTF-8
ENV LC_ALL=en_US.UTF-8
ENV NEXT_TELEMETRY_DISABLED=1

RUN npm install -g corepack@latest yarn@latest \
    && corepack enable \
    && corepack prepare pnpm@${PNPM_VERSION} --activate \
    && npm install -g @storybook/cli@latest eslint@latest stylelint@latest \
    && npm cache clean --force

RUN mkdir -p /workspaces

WORKDIR /workspaces

CMD ["/bin/bash"]
